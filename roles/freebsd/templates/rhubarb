#!/bin/sh

ipfw -q -f flush

ipfw -q add allow all from any to any via lo0
ipfw -q add allow all from any to any via tap0

ipfw -q add check-state
ipfw -q add allow all from any to any established
ipfw -q add allow all from any to any out keep-state
ipfw -q add allow ip6 from any to any out keep-state

ipfw -q add allow icmp from any to any in keep-state
ipfw -q add allow ipv6-icmp from any to any keep-state
ipfw -q add allow tcp from any to any 25 in keep-state
ipfw -q add allow tcp from any to any 53 in keep-state
ipfw -q add allow udp from any to any 53 in keep-state
ipfw -q add allow tcp from any to any 80 in keep-state
ipfw -q add allow tcp from any to any 587 keep-state
ipfw -q add allow tcp from any to any 993 keep-state
ipfw -q add allow tcp from any to any 63022 in keep-state
ipfw -q add allow udp from any to any 60000-61000 in keep-state
